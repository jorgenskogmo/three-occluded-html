{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2018",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "strict": true,
    "preserveSymlinks": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "removeComments": false,
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
